	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"function base64url(source) {",
					"  encodedSource = CryptoJS.enc.Base64.stringify(source);",
					"  encodedSource = encodedSource.replace(/=+$/, '');",
					"  encodedSource = encodedSource.replace(/\\+/g, '-');",
					"  encodedSource = encodedSource.replace(/\\//g, '_');",
					"  return encodedSource;",
					"}",
					"",
					"var header = {",
					"  \"typ\": \"JWT\",",
					"  \"alg\": \"HS256\"",
					"};",
					"",
					"var payload = {",
					"  \"iss\": pm.variables.get(\"issuer\"),",
					"  \"sub\": pm.variables.get(\"subject\"),",
					"  \"iat\": Math.trunc(Date.now() / 1000)",
					"};",
					"",
					"",
					"var encodedHeader = base64url(CryptoJS.enc.Utf8.parse(JSON.stringify(header)));",
					"var encodedData = base64url(CryptoJS.enc.Utf8.parse(JSON.stringify(payload)));",
					"",
					"var token = encodedHeader + \".\" + encodedData;",
					"var signature = base64url(CryptoJS.HmacSHA256(token, pm.variables.get(\"secret\")));",
					"pm.variables.set(\"jwt\", token + \".\" + signature);"
				]
			}
		},
